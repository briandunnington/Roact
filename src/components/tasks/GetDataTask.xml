<?xml version="1.0" encoding="utf-8" ?>
<component name="GetDataTask" extends="Task">
    <interface>
        <!--
        Each call to m.top.[field] will cause a rendezvous. To reduce that impact, it is better to pass
        in all input parameters as a single field (even though there will be a copy operation on the assocarray initially) 
        -->
        <field id="input" type="assocarray" />

        <!--
        Only return ContentNode objects from tasks since they are passed 'byref'.
        -->
        <field id="output" type="node" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/tasks/GetDataTask.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Fetch.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Proxy.brs"/>
</component>